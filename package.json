{
  "name": "neon",
  "version": "0.2.0",
  "main": "index.js",
  "repository": "git@github.com:neon-loves-e2e/neon.git",
  "author": "indexmotion <indexmotion@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/puppeteer": "^0.13.8",
    "nyc": "^11.4.1",
    "typedoc": "^0.9.0",
    "typescript": "^2.6.2"
  },
  "dependencies": {
    "ava": "^0.24.0",
    "puppeteer": "^0.13.0"
  },
  "scripts": {
    "tsc": "./node_modules/.bin/tsc",
    "tsc:auto": "./node_modules/.bin/tsc --watch",
    "tsc:build": "./node_modules/.bin/tsc -p tsconfig.build.json",
    "test":
      "yarn run tsc && ./node_modules/.bin/ava test/**/*.test.js $NEON_TESTING_OPTIONS || true",
    "pretest": "node ./test/scaffolds/startTestingServer &",
    "posttest": "node ./test/scaffolds/stopTestingServer",
    "test:auto":
      "NEON_TESTING_OPTIONS='$NEON_TESTING_OPTIONS --watch' yarn test",
    "test:cov":
      "./node_modules/.bin/nyc --reporter=text --reporter=html yarn test",
    "mkdoc": "./node_modules/.bin/typedoc --out doc lib/"
  }
}
